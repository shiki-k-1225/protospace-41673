<!-- app/views/comments/_form.html.erb -->
<%= form_with(model: [ @prototype, comment ], local: false, remote: true, html: { id: "edit_comment_#{comment.id}" }) do |f| %>
  <div class="form-group">
    <%= f.label :content, "コメント内容" %>
    <%= f.text_area :content, class: 'form-control', id: "comment_content_#{comment.id}" %>
  </div>
  <div class="form-group">
    <%= f.submit '更新', class: 'btn btn-primary' %>
  </div>
<% end %>
