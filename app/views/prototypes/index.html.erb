<!-- app/views/prototypes/index.html.erb -->
<div class="search-form">
  <%= form_with url: prototypes_path, method: :get, local: false, remote: true do %>
    <%= text_field_tag :search, params[:search], placeholder: "プロトタイプを検索", class: 'search-input' %>
    <%= submit_tag '検索', class: 'search-btn' %>
  <% end %>
</div>

<div class="sort-links">
  <%= link_to '新着順', prototypes_path(sort: 'new'), class: 'btn btn-primary' %>
  <%= link_to '古い順', prototypes_path(sort: 'old'), class: 'btn btn-secondary' %>
</div>

<div class="prototype-list">
  <%= render @prototypes %>
</div>

<div class="pagination">
  <%= will_paginate @prototypes %>
</div>
