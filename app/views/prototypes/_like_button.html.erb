<% if user_signed_in? %>
  <% if prototype.liked_by?(current_user) %>
    <%= link_to 'いいねを取り消す', prototype_likes_path(prototype), method: :delete, remote: true, class: 'btn btn-warning' %>
  <% else %>
    <%= link_to 'いいね', prototype_likes_path(prototype), method: :post, remote: true, class: 'btn btn-primary' %>
  <% end %>
<% else %>
  <%= link_to 'いいねするにはログインが必要です', new_user_session_path, class: 'btn btn-primary' %>
<% end %>
